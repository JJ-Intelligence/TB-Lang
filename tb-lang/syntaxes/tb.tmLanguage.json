
{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "TB",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#types"
		},
		{
			"include": "#operator"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#vars"
		}
	],
	"repository": {
		"comments": {
			"patterns": [{
			  "name": "comment.line",
			  "match": "--.*"
		  },
		  {
			  "name": "comment.block",
			  "match": "/\\*.*\\*/"
		  }]
	  	},
		"types" : {
			"patterns": [
				{
					"name": "support.types",
					"match": "\\b(Int|Bool|(Itr|Eq|Ord) [A-Z|a-z|_]+|\\~|NoneType)"
				}
			]
		},
		"operator": {
		  	"patterns": [{
				"name": "keyword.other",
				"match": "\\+|\\-|\\*|\\%|\\/|\\&|\\:"
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.tb",
				"match": "\\b(if|while|for|return|func|elif|else|type)\\b"
			}]
		},
		"constants": {
		  	"patterns": [
				{
					"name": "constant.numeric",
					"match": "\\b[0-9]+\\b"
				},
				{
					"name": "constant.language",
					"match": "True|False|None"
				}]
		},

		"vars": {
		  	"patterns": [
				{
					"name": "support.function",
					"match": "\\b(out|in|tail|head|drop|take|length|get|pop|popN|peek|peekN|isEmpty|hasElems|throw)"
				},
				{
					"name": "variable.other",
					"match": "\\b[A-Z|a-z|_][A-Z|a-z|0-9|_]*\\b"
				}
			]
		}
	},
	"scopeName": "source.tb"
}